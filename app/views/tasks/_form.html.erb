<%= form_with(model: @task, local: true, class: "card p-4 shadow-sm") do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label fw-bold" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :details, class: "form-label fw-bold" %>
    <%= form.text_area :details, class: "form-control" %>
  </div>

  <% if @task.persisted? %>
    <div class="form-check mb-3">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, "Completed", class: "form-check-label" %>
    </div>
  <% end %>

  <%= form.submit @task.persisted? ? 'Update Task' : 'Create Task', class: "btn btn-success" %>
<% end %>

<div class="mt-3">
  <%= link_to 'Back to task list', tasks_path, class: "btn btn-secondary" %>
</div>

